<% if user_signed_in? %>
  <%= link_to('LOG THE FUCK OUT', destroy_user_session_path, :method => :delete) %>        
<% else %>
  <%= link_to('LOG THE FUCK IN', new_user_session_path)  %>  
<% end %>

<div ng-controller="TPQuestionController">
  <div id="questionModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="text-center">{{questionHeader}}</h1>
        </div>

        <% if user_signed_in? %>
        <div class="modal-body sample-show-hide" ng-show="!answered">
          <h3 style="text-align:center;">{{question.body}}</h3>

          <form class="form-horizontal" ng-submit="submitVote(question.id, answer_id)">
            <div class="form-group">
             <div class="col-xs-9">

              <div class="radio" ng-repeat="answer in question.poll_answers">
                <input type="radio" name="answer" ng-model="$parent.answer_id" id="answer_radio_{{$index}}" ng-value="{{$index}}" />
                <label for="answer_radio_{{$index}}">{{answer.body}} -- {{$index}} -- {{$parent.answer_id}}</label>
              </div>

             </div>
            </div>

           <button type="submit">Vote</button>
          </form>
        </div>
      </div>
      <% else %>
        <h3 style="text-align:center"><%= link_to('SIGN IN TO FUCKING VOTE', new_user_session_path)  %></h3>
      <% end %>

      <% if user_signed_in? %>
      <div class="modal-body sample-show-hide" ng-show="answered">
          <h3 style="text-align:center;">{{question.body}}</h3>
          <div ng-repeat="answer in question.poll_answers">
            {{answer.body}} -- {{$index}} -- {{answer_id}}
          </div>
      </div>
      <% end %>

    </div>
  </div>

  <div class="container-fluid">
    <div class="row">
      <div class="col-md-offset-2 col-md-8" ng-show="answered">
        <div class="slider autoplay data-viz-block" style="text-align:center;">
          <div>
            <canvas id="barChart" width="400" height="400"></canvas>
          </div>
          <div>
            <canvas id="donutChart" width="400" height="400"></canvas>
          </div>
        </div>
      </div>

      <!--  the old chart -->
      <!-- <div class="col-md-offset-3 col-md-6" style="background-color:white; text-align:center"> -->
          <!-- <canvas id="barChart" width="400" height="400"></canvas> -->
      <!-- </div> -->
    </div>
  </div>

  <div class="container-fluid">
    <div class="row">
      <div class="col-md-offset-2 col-md-8">
        <div id="world-map" style="position: relative; background-color:white;"></div> <!-- width: 500px; height: 300px; -->
      </div>
    </div>
  </div>

</div>

